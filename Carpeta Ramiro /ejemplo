#include <iostream>

using namespace std;


int main()
{
    int opcion;
    cout<<"Ingrese una opcion: ";
    cin>>opcion;

    while (opcion!=0)
    {
        switch (opcion)
        {
            case 1:
                cout << "" << endl;
            break;
            case 2:
                cout << "" << endl;
            break;
            case 3:
                cout << "" << endl;
            break;
            default:
                cout << "" << endl;
            break;


        }
        cout<<"Ingrese una opcion: ";
        cin>>opcion;

    }

    system("pause");
    return 0;
}

